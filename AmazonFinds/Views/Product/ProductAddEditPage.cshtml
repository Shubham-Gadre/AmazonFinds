@model ProductModel



<div class="container">
    <h3 class="display-4">Add new product</h3>

    @if (ViewBag.isSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Product uploaded!!</strong> Click <a asp-action="Index" asp-controller="Product">here</a> to view it.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post" asp-action="addNewProduct" asp-controller="Product">
        <div class="form-group">
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductLink"></label>
            <input asp-for="ProductLink" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Upload</button>
        </div>
    </form>
</div>